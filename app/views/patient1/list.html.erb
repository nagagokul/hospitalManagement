<% if !user_signed_in? %>
<div class="header">
<h1>ABC Hospital</h1>
</div>
<div class="center1">
<h2>Login first</h2>
<p class="Sign_in"><%= link_to "Login", new_user_session_path %></p>
</div>
<%end%>
<% if user_signed_in? %>
<div class="button">
<% if !current_user.patient1s.any? %>
<div class="header">
<h1>ABC Hospital</h1>
</div>
<div class="center1">

<p>There are no patient added currently in our system by <%= current_user.email %></p>
</div>
<% else %>
<div class="header">

<h1>ABC Hospital</h1>
</div>
<div class="center1">

<p>These are the current patients added in our system by <%= current_user.email %></p>
</div>
<table class="content-table" style="margin-left:auto;margin-right:auto;">
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Update</th>
      <th>Delete</th>
      
    </tr>
  </thead>
  <tbody>
  <% current_user.patient1s.each do |c| %>
    <tr class="active-row">
    
      <td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
      <td><%= link_to 'Edit', {:action => "edit", :id => c.id} %></td>
      <td><%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></td>
      <% end %>
    </tr>
    
   </tbody>
   
</table>

<% end %>

<div class="center1">
<p><%= link_to "Add new patient", {:action => 'new' }%></p><br />
<%= link_to "Logout", destroy_user_session_path, :method => :delete%><br /><br />
<%= link_to "back", {:action => 'home', :controller=>"pages"} %>
</div>

<%end%>
