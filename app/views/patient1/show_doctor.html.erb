<% if !user_signed_in? %>
<div class="header">
<h1>ABC Hospital</h1>
</div>
<div class="center1">
<h2>Login first</h2>
<p class="Sign_in"><%= link_to "Login", new_user_session_path %></p>
</div>
<%end%>

<% if user_signed_in? %>
<% if @doctor.blank? %>
<div class="header">
<h1>ABC Hospital</h1>
</div>
<div class="center1">
<p>There are no Doctors added currently in the system.</p>
</div>
<% else %>
<div class="header">
<h1>ABC Hospital</h1>
</div>
<div class="center1">

<p>The Available doctors are</p>
</div>
<table class="content-table" style="margin-left:auto;margin-right:auto;">
  <thead>
    <tr>
      <th>Doctor Name</th>
      <th>Specialisation</th>
      <th>Department</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% current_user.doctors.each do |c| %>
    <tr class="active-row">
    
    <td><%= link_to c.name, {:action => 'show_doctor1', :id => c.id} %><br/></td>
    <td><%= c.specialisation %><br/></td>
    <td><%= c.department %><br/></td>
    <td><%= link_to 'Edit', {:action => "edit1", :id => c.id} %></td>
    <td><%= link_to "Delete", {:action => 'delete1', :id => c.id},
    :confirm => "Are you sure you want to delete this item?" %></td>
    <% end %>
    </tr>
    
   </tbody>
   
</table>
   
<% end %>

<div class="center1">
<p><%= link_to "Add new Doctor", {:action => 'new1' }%></p><br />
<%= link_to "Logout", destroy_user_session_path, :method => :delete%><br /><br />
<%= link_to "back", {:action => 'home', :controller=>"pages"} %>
</div>

<%end%>
  
  
